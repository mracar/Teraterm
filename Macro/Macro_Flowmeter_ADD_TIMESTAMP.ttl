;Definiranje imena datoteke log-a
;*********************************************************************************
inputbox  'Ime datoteke u koju æe spremiti [bez ekstenzije]:' 'Ime datoteke'
sprintf2 fn '%s.txt' inputstr
filename=fn
;*********************************************************************************
;Definiranje direktorija u kojem æe se dataoteka spremiti
;*********************************************************************************
dirnamebox 'select a directory'
changedir inputstr
;#################################################################################


;#################################################################################
;Beskonaèna petlja: program se gasi ruèno u prozoru mocro-a
;*********************************************************************************
logopen filename 0 0
setsync 0
i = 0
while i = 0
	recvln
	logwrite inputstr
	logwrite ','
	gettime time
	logwrite time
endwhile


logclose
setsync 0
end
